<!--pages/userInfo/userInfo.wxml-->
<view>
  <import  src="/template/userDetail"/>
  <view wx:if="{{loading}}" class="loading">
    <image  src="/assets/img/loading.svg"></image>
  </view>
  <view wx:else>
    <template is="userDetail" data="{{...userInfo}}"></template>
    <scroll-view scroll-x style="width: 100%;height: 200px; margin-top: 10px;white-space: nowrap; ">
      <view class="scroll-hy">
        <image src="/assets/img/s1.jpg"></image>
      </view>
      <view class="scroll-hy">
        <image src="/assets/img/s2.jpg"></image>
      </view>
      <view class="scroll-hy">
        <image src="/assets/img/s3.jpg"></image>
      </view>
      <view class="scroll-hy">
        <image src="/assets/img/s4.jpg"></image>
      </view>
    </scroll-view>
    <button type="primary" size="mini" bindtap="loginBtn">跳转登录</button>
    <swiper class="user-swiper" indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}"
        interval="{{interval}}"
        duration="{{duration}}">
      <block wx:for="{{pictures}}" wx:key="item.id">
        <swiper-item>
          <image src="{{item.url}}"></image>
        </swiper-item>
      </block>
    </swiper>
    <view class="video-box">
      <video class='view-box-video' id="<myVideo></myVideo>" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400"   enable-danmu danmu-btn controls></video>
      <view>
        <button bindtap="bindButtonTap">选取视频</button>
        <input type="text" bindtap="bindButtonTap"></input>
        <button bindtap="bindSendDanmu">发送弹幕</button>
      </view>
    </view>
  </view>
</view>
