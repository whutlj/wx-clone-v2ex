.m-width {
  width: 100%;
  height: 170rpx;
  margin-top: 5rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 0 5px #d6d6d6;
  border-radius: 8rpx;
  padding: 10rpx;
}
.topic-box{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  height: 100%;
  width: 100%;
}

.user-avatar {
  width: 130rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 5rpx;
}
.user-avatar image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 8rpx;
}

.topic-title {
  width: 520rpx;
  height: 130rpx;
  overflow: hidden;
  font-size: 12px;
  color: #757575;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.topic-info {

}

.user-name {
  color: #7d7d7d;
  font-size: 12px;
}
.topic-type {
  color: #4caf50;
}
.topic-reply {
  background: #d3321b;
  color: #fff;
  width: 70rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 12px;
  margin: auto 0;
}