/* pages/topicDetail/topicDetail.wxss */
.center {
  text-align: center;
}

.topic-detail-box {
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 12px;
}

.topic-detail-user-avatar {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.topic-detail-user-avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50% 50%;
}
.topic-detail-name {
  color: #737373;
  line-height: 40rpx;
}

.topic-detail-info {
  width: 600rpx;
}
.topic-detail-title {
  color: #828282;
}

.topic-detail-type {
  color: #4caf50;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.topic-detail-info {
  min-height: 150rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content:space-between;
}
.topic-detail-replies {
  background: #d3321b;
  color: #fff;
  width: 40rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 12px;
  margin: auto 0;
}
.topic-detail-created {
  margin-left: 20rpx;
}
.topic-detail-content {
  border-top: 1px solid #e4e4e4;
  border-bottom: 1px solid #e4e4e4;
  padding: 30rpx 20rpx;
  font-size: 14px;
  color: #737373;
}